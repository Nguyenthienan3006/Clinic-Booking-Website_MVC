@model Website_Mvc.Models.AccountInfo
@{
	var userRoll = Context.Session.GetString("UserRole");
}
<!DOCTYPE html>
<html lang="en">

<!-- doccure/login.html  30 Nov 2019 04:12:20 GMT -->
<head>
	<meta charset="utf-8">
	<title>Doccure</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">

	<!-- Favicons -->
	<link href="~/Template/assets/img/favicon.png" rel="icon">

	<!-- Bootstrap CSS -->
	<link rel="stylesheet" href="assets/css/bootstrap.min.css">

	<!-- Fontawesome CSS -->
	<link rel="stylesheet" href="~/Template/assets/plugins/fontawesome/css/fontawesome.min.css">
	<link rel="stylesheet" href="~/Template/assets/plugins/fontawesome/css/all.min.css">

	<!-- Main CSS -->
	<link rel="stylesheet" href="~/Template/assets/css/style.css">

	<!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
	<!--[if lt IE 9]>
		<script src="assets/js/html5shiv.min.js"></script>
		<script src="assets/js/respond.min.js"></script>
	<![endif]-->

</head>
<body class="account-page">


	<!-- Breadcrumb -->
	<div class="breadcrumb-bar">
		<div class="container-fluid">
			<div class="row align-items-center">
				<div class="col-md-12 col-12">
					<nav aria-label="breadcrumb" class="page-breadcrumb">
						<ol class="breadcrumb">
							<li class="breadcrumb-item"><a href="index-2.html">Home</a></li>
							<li class="breadcrumb-item active" aria-current="page">Profile Settings</li>
						</ol>
					</nav>
					<h2 class="breadcrumb-title">Profile Settings</h2>
				</div>
			</div>
		</div>
	</div>
	<!-- /Breadcrumb -->
	<!-- Page Content -->
	<div class="content">
		<div class="container-fluid">
			<div class="row">

				<!-- Profile Sidebar -->
				<div class="col-md-5 col-lg-4 col-xl-3 theiaStickySidebar">
					<div class="profile-sidebar">
						<div class="widget-profile pro-widget-content">
							<div class="profile-info-widget">
								<a href="#" class="booking-doc-img">
									<img src="~/Template/assets/img/patients/patient.jpg" alt="User Image">
								</a>
								<div class="profile-det-info">
									<h3>@Model.FullName</h3>
									<div class="patient-details">
										<h5><i class="fas fa-birthday-cake"></i>@Model.DateOfBirth</h5>
										<h5 class="mb-0"><i class="fas fa-map-marker-alt"></i>@Model.Address</h5>
									</div>
								</div>
							</div>
						</div>
						<div class="dashboard-widget">
							<nav class="dashboard-menu">
								<ul>
									@if (userRoll == "1")
									{
										<li>
											<a href=" @Url.Action("Index", "AdminHome")">
												<i class="fas fa-columns"></i>
												<span>Dashboard</span>
											</a>
										</li>

										
									}
									@if (userRoll == "2")
									{
										<li>
											<a href=" @Url.Action("Index", "DoctorHome")">
												<i class="fas fa-columns"></i>
												<span>Dashboard</span>
											</a>
										</li>
										
									}
									@if (userRoll == "3")
									{
										<li>
											<a href=" @Url.Action("Index", "PatientHome")">
												<i class="fas fa-columns"></i>
												<span>Dashboard</span>
											</a>
										</li>
										
									}
									
									
									
									<li class="active">
										<a href="@Url.Action("Index", "Profile")">
											<i class="fas fa-user-cog"></i>
											<span>Profile Settings</span>
										</a>
									</li>
									<li>
										<a href="@Url.Action("Index", "ChangePass")">
											<i class="fas fa-lock"></i>
											<span>Change Password</span>
										</a>
									</li>
									<li>
										<a href="@Url.Action("Index", "Home")">
											<i class="fas fa-sign-out-alt"></i>
											<span>Logout</span>
										</a>
									</li>
								</ul>
							</nav>
						</div>

					</div>
				</div>
				<!-- /Profile Sidebar -->

				<div class="col-md-7 col-lg-8 col-xl-9">
					<div class="card">
						<div class="card-body">

							<!-- Profile Settings Form -->
							<form method="get" action="@Url.Action("Edit","Profile")">
								<div class="row form-row">

									<div class="col-12 col-md-6">
										<div class="form-group">
											<label>First Name</label>
											<input type="text" class="form-control" value="@Model.FirstName" name="firstname">
										</div>
									</div>
									<div class="col-12 col-md-6">
										<div class="form-group">
											<label>Last Name</label>
											<input type="text" class="form-control" value="@Model.LastName" name="lastname">
										</div>
									</div>
									<div class="col-12 col-md-6">
										<div class="form-group">
											<label>Date of Birth</label>
											<div class="cal-icon">
												<input type="text" class="form-control datetimepicker" value="@Model.DateOfBirth" name="dob">
											</div>
										</div>
									</div>
									<div class="col-12 col-md-6">
										<div class="form-group">
											<label>Blood Group</label>
											<select id="bloodGroupSelect" class="form-control floating" name="bloodGroup">
												<option value="@Model.BloodGroup">@Model.BloodGroup</option>
												<option value="A-">A-</option>
												<option value="A+">A+</option>
												<option value="B-">B-</option>
												<option value="B+">B+</option>
												<option value="AB-">AB-</option>
												<option value="AB+">AB+</option>
												<option value="O-">O-</option>
												<option value="O+">O+</option>
											</select>
										</div>
									</div>
									<div class="col-12 col-md-6">
										<div class="form-group">
											<label>Email ID</label>
											<input type="email" class="form-control" value="@Model.Email" name="email">
										</div>
									</div>
									<div class="col-12 col-md-6">
										<div class="form-group">
											<label>Mobile</label>
											<input type="text" value="@Model.Phonenumber" class="form-control" name="phone">
										</div>
									</div>
									<div class="col-12">
										<div class="form-group">
											<label>Address</label>
											<input type="text" class="form-control" value="@Model.Address" name="address">
										</div>
									</div>

								</div>
								<div class="submit-section">
									<button type="submit" class="btn btn-primary submit-btn">Save Changes</button>
								</div>
							</form>
							<!-- /Profile Settings Form -->

						</div>
					</div>
				</div>
			</div>
		</div>

	</div>
	<!-- /Page Content -->
	<!-- jQuery -->
	<script src="~/Template/assets/js/jquery.min.js"></script>

	<!-- Bootstrap Core JS -->
	<script src="~/Template/assets/js/popper.min.js"></script>
	<script src="~/Template/assets/js/bootstrap.min.js"></script>

	<!-- Custom JS -->
	<script src="~/Template/assets/js/script.js"></script>

</body>

<!-- doccure/login.html  30 Nov 2019 04:12:20 GMT -->
</html>